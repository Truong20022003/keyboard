<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F7F7FB">



    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageView1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/intro1"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_height="0dp" />
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/configrounded_600"
            android:gravity="start"
            android:text="@string/design_your_keyboard"
            android:textColor="@color/color_333841"
            android:textSize="@dimen/_22ssp" />

        <TextView
            android:lineHeight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:gravity="start"
            android:text="@string/customize_your_keyboard_with_500_themes"
            android:textColor="@color/color_333841"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
