<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/lnlKeyboardGenneral"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/bg_keyboard_ios"
        android:orientation="vertical">

        <include
            android:id="@+id/lnlImage"
            layout="@layout/layout_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.sticker.nicekeyboard.custom.MyKeyboardView
            android:layout_gravity="center"
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:keyPreviewHeight="60dp"
            android:keyPreviewLayout="@layout/layout_preview"
            android:keyPreviewOffset="5dp"
            android:keyTextColor="#ffffffff"
            android:popupLayout="@layout/layout_keyboard_popup" />
    </LinearLayout>
</LinearLayout>
